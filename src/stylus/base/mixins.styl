// Interaction

ActiveFocusHover()
	&.active
	&:active,
	&:focus,
	&:hover
		{block}

// Layout

clear()
	clear 						both

clearfix()
	*zoom:1

	&:before,
	&:after
		content:""
		display:table

	&:after
		clear:both

fl()
	float						left

fr()
	float						right

