.hero
	relative()
	box-shadow			inset 0 0 20em rgba($black, 1)
	height				20em
	overflow			hidden
	
	@media (min-width: 560px)
		height			30em
	
	img
		display			block
		filter			sepia(50%)
		opacity			0.7

		@media (min-width: 900px)
			margin-top	-15em

		@media (min-width: 1000px)
			margin-top	-20em
	
	.segment
		left			50%
		position		absolute
		top				50%
		transform		translateX(-50%) translateY(-50%)
		
		&.ui.inverted
			background-color	rgba($black, 0.7) !important

		&.ui.circular
			padding		3em
			
			@media (min-width: 768px)
				padding	2em